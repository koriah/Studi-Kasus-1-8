<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.koriah.kasus_8.RegisterActivity">

    <ImageView
        android:src="@mipmap/mak"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:paddingBottom="40dp"/>


        <EditText
            android:id="@+id/emailregis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:hint="@string/hint_email"
            android:padding="5dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/input_register"
            android:textColor="@color/input_register_hint"/>
        <EditText
            android:id="@+id/passregis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="@color/input_register"
            android:textColor="@color/input_register_hint"/>

        <EditText
            android:id="@+id/firstregis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"

            android:hint="@string/hint_firstname"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="@color/input_register"
            android:textColor="@color/input_register_hint"/>

        <EditText
            android:id="@+id/lastregis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"

            android:hint="@string/hint_lastname"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="@color/input_register"
            android:textColor="@color/input_register_hint"/>

        <Button
            android:id="@+id/btnregis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="@string/btn_register"/>

        <Button
            android:id="@+id/btnlinklogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@color/colorPrimary"
            android:text="@string/btn_link_to_login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"/>

</LinearLayout>
